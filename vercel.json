{
  "builds": [
    {
      "src": "*.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/products",
      "dest": "index.js"
    },
    {
      "src": "/products/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/brands",
      "dest": "index.js"
    },
    {
      "src": "/brands/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/categories",
      "dest": "index.js"
    },
    {
      "src": "/categories/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/user",
      "dest": "index.js"
    },
    {
      "src": "/user/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/auth",
      "dest": "index.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/cart",
      "dest": "index.js"
    },
    {
      "src": "/cart/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/orders",
      "dest": "index.js"
    },
    {
      "src": "/orders/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/add",
      "dest": "dist/index.html"
    },
    {
      "src": "/",
      "dest": "dist/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "dist/$1"
    }
],
  "rewrites": [{ "source": "/(.*)", "destination": "/" }]
}